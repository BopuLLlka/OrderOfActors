<script>
    $(document).ready(function () {
        //Call EmpDetails jsonResult Method
        $.getJSON("/api/Stars",
            function (json) {
                //Append each row to html table
                $("p").append(json.length);
                for (var i = 0; i < json.length; i++) {
                    $(".starName."+i).append(json[i].FirstName);
                    $(".starName."+i).append(" " + json[i].SecondName);
                    $(".starDescription." + i).append(json[i].Description);
                }
            });
    });
</script>
@{
    
    //Выводит несколько карточек на главной, пока просто генерирует одинаковые
    for (int i = 0; i < 10; i++)
    {
        <div class="starCard @i">
            <img />
            <p class="starName @i"></p>
            <p class="starDescription @i"></p>
        </div>

    }
}
