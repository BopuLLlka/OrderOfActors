@model int
<script>
    $(document).ready(function () {
        //Call EmpDetails jsonResult Method
        $.getJSON("/api/Stars/@Model",
            function (json) {
                var viewModel = {
                    name: json.FirstName + " " + json.LastName,
                    description: json.Description
                }
                ko.applyBindings(viewModel);
            });
        $('.myPicker').datepicker({
            // Можно выбрать тольо даты, идущие за сегодняшним днем, включая сегодня
            minDate: new Date()
        })
    });
</script>
<link href="~/Content/datepicker.css" rel="stylesheet" type="text/css">
<script src="~/Scripts/datepicker.js"></script>

<div id="mainContent">
    <div id='fullStarCardName' data-bind="text:name"></div>
    <div id='fullStarCardDescription' data-bind="text:description"></div>
    <div id="orderContainer">
        <div id="datePickerContainer">
            <p>Выберите дату:</p>
            <br />
            <div class="datepicker-here myPicker"></div>
        </div>
        <div id="timePickerContainer">
            <p>Выберите время:</p>
            <br />
            <div>Тут будет выбор времени!!!</div>
        </div>
    </div>
</div>





