@model int

<script>
    $(document).ready(function () {
        //Call EmpDetails jsonResult Method
        $.getJSON("/api/Stars/@Model",
            function (json) {
                $("#mainContent").append("<div id='fullStarCardName'>" + json.FirstName + " " + json.SecondName + "</div>");
                $("#mainContent").append("<div id='fullStarCardDescription'>"+json.Description+"</div>")
            });
    });


</script>



